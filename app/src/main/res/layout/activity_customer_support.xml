<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.support.detail.CustomerSupportViewModel" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.support.detail.CustomerSupportActivity">
        <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/customerSupportEpoxyRecyclerView"/>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/qn"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_h5"
            android:text="How can I book service online?"
            android:fontFamily="@font/linetocircular"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/an"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_h6"
            android:text="@string/answer"
            android:fontFamily="@font/linetocircular"
            android:textColor="@color/text_color"/>
        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/semi_white"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_h5"
            android:text="Still have an issue?"
            android:fontFamily="@font/linetocircular"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_margin="20dp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/rouded_square_ripple"
            android:id="@+id/message"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute">
            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/theme"
                android:layout_centerVertical="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_comment"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/theme"
                android:layout_toStartOf="@id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Message Us"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_h6"
                    android:fontFamily="@font/linetocircular"/>
                <TextView
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Let us know about your query"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_h7"
                    android:fontFamily="@font/linetocircular"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/next"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="15dp"
                android:layout_marginEnd="10dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_right_arrow"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/rouded_square_ripple"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:id="@+id/call"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_width="18dp"
                android:id="@+id/sec"
                android:layout_height="18dp"
                android:src="@drawable/ic_call_fill"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/sec"
                android:layout_toStartOf="@id/next1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Call Us"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_h6"
                    android:fontFamily="@font/linetocircular"/>
                <TextView
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="5dp"
                    android:text="Talk with our customer care executive"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_h7"
                    android:fontFamily="@font/linetocircular"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/next1"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="15dp"
                android:layout_marginEnd="10dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_right_arrow"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/semi_white"/>
    </LinearLayout>
</layout>
