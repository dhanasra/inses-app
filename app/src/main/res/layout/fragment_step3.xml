<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.dashboard.makeService.steps.Step3ViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.makeService.steps.Step3Fragment">
        <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scheduleEpoxyRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <ScrollView
            android:layout_below="@id/scheduleEpoxyRecyclerView"
            android:layout_above="@id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <TextView
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h5"
                    android:text="when do you need this service"
                    android:fontFamily="@font/linetocircular"
                    android:textColor="@color/black"/>
                <RelativeLayout
                    android:id="@+id/dateL"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        layout="@layout/date_item"
                        android:id="@+id/fDate"/>

                    <include
                        android:layout_margin="5dp"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:id="@+id/sDate"
                        layout="@layout/date_item"
                        android:layout_toEndOf="@id/fDate"
                        />

                    <include
                        android:layout_margin="5dp"
                        android:layout_toEndOf="@id/sDate"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:id="@+id/pDate"
                        layout="@layout/date_item" />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h5"
                    android:text="Select Time"
                    android:fontFamily="@font/linetocircular"
                    android:textColor="@color/black"/>
                <com.airbnb.epoxy.EpoxyRecyclerView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeEpoxyRecyclerView"
                    app:spanCount="3"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
            </LinearLayout>
        </ScrollView>
       <RelativeLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:background="@drawable/curve_button"
                android:layout_height="40dp">
                <Button
                    android:visibility="visible"
                    android:fontFamily="@font/linetocircular"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:id="@+id/next"
                    android:textAllCaps="false"
                    android:text="continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_h3"
                    />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:visibility="gone"
                    android:theme="@style/progress_button_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
       </RelativeLayout>
    </RelativeLayout>
</layout>
