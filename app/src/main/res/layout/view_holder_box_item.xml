<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="text"
            type="String" />
        <variable
            name="text2"
            type="String" />
        <variable
            name="isCenter"
            type="Boolean" />
        <variable
            name="setBackground"
            type="Boolean" />
        <variable
            name="txtSize"
            type="String" />
        <variable
            name="txtStyle"
            type="String" />
        <variable
            name="txtColor"
            type="String" />
        <variable
            name="imageType"
            type="String" />
        <variable
            name="tvVisibility"
            type="Boolean" />
        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:onClick="@{onClick}"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/rouded_square_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <LinearLayout
                android:background="@color/white_two"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:scaleType="centerCrop"
                    app:imageType="@{imageType}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{text}"
            app:txtColor="@{txtColor}"
            android:textColor="@color/black"
            app:txtSize="@{txtSize}"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/sub"
            app:txtStyle="@{txtStyle}"
            android:fontFamily="@font/linetocircular"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{text2}"
            android:visibility="@{tvVisibility?android.view.View.VISIBLE:android.view.View.GONE}"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_h6"
            android:id="@+id/subTitle"
            android:fontFamily="@font/linetocircular"/>
    </LinearLayout>
</layout>

