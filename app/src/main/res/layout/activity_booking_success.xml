<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.dashboard.makeService.steps.Step4ViewModel" />
    </data>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.makeService.steps.BookingSuccessActivity">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/title1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_h3"
                android:text="Success"
                android:fontFamily="@font/linetocircular"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_booking_success"/>
            <TextView
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/title3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_h6"
                android:text="Successfully booked your service. Our Experts will contact you soon"
                android:fontFamily="@font/linetocircular"
                android:textColor="@color/grey"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rlBackToHome"
                    android:layout_width="match_parent"
                    android:background="@drawable/curve_button"
                    android:layout_height="40dp">
                    <Button
                        android:visibility="visible"
                        android:fontFamily="@font/linetocircular"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:id="@+id/backToHome"
                        android:textAllCaps="false"
                        android:text="Bact To Home"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_h5"
                        />
                    <ProgressBar
                        android:id="@+id/bookProgress"
                        android:visibility="gone"
                        android:theme="@style/progress_button_style"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>