<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.dashboard.makeService.steps.Step4ViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.makeService.steps.Step4Fragment">
        <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scheduleEpoxyRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <ScrollView
            android:layout_below="@id/scheduleEpoxyRecyclerView"
            android:layout_above="@id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toStartOf="@id/sep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_h6"
                            android:text="Service Date"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:fontFamily="@font/linetocircular"
                            android:textColor="@color/grey"/>
                        <TextView
                            android:id="@+id/serviceDate"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_h6"
                            android:fontFamily="@font/linetocircular"
                            android:textColor="@color/black"/>
                        <TextView
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_h6"
                            android:text="change"
                            android:fontFamily="@font/linetocircular"
                            android:textColor="@color/color_secondary"/>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/sep"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@color/grey"
                        android:layout_width="1dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/sep"
                        android:layout_alignParentEnd="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_h6"
                            android:text="Address"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:fontFamily="@font/linetocircular"
                            android:textColor="@color/grey"/>
                        <TextView
                            android:id="@+id/address"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_h6"
                            android:fontFamily="@font/linetocircular"
                            android:textColor="@color/black"/>
                        <TextView
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_h6"
                            android:text="change"
                            android:fontFamily="@font/linetocircular"
                            android:textColor="@color/color_secondary"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/grey"/>
                <LinearLayout
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_h5"
                        android:text="My Requirements"
                        android:fontFamily="@font/linetocircular"
                        android:textColor="@color/black"/>
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:padding="5dp"
                            android:id="@+id/img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_water_tap"
                            android:gravity="center" />
                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/remove"
                            android:layout_toEndOf="@id/img"
                            android:layout_marginStart="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/type"
                                android:maxLines="2"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_h5"
                                android:fontFamily="@font/linetocircular"/>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/remove"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="0dp"
                            android:layout_width="40dp"
                            android:background="@drawable/curve_button_two"
                            android:layout_height="35dp">
                            <LinearLayout
                                android:focusable="true"
                                android:clickable="true"
                                android:background="@drawable/selected_back"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:ignore="UnusedAttribute">
                                <TextView
                                    android:id="@+id/no"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textSize="@dimen/text_size_h5"
                                    android:fontFamily="@font/linetocircular"
                                    android:textColor="@color/black"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <View
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey"/>
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_h5"
                            android:fontFamily="@font/linetocircular"/>
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/amount"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_h5"
                            android:fontFamily="@font/linetocircular"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Discounts"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_h5"
                            android:fontFamily="@font/linetocircular"/>
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Rs. 100"
                            android:maxLines="2"
                            android:id="@+id/discount"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_h5"
                            android:fontFamily="@font/linetocircular"/>
                    </RelativeLayout>
                    <View
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"/>
                    <RelativeLayout
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount Payable"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_h2"
                            android:fontFamily="@font/linetocircular"/>
                        <TextView
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/payableAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Rs. 4000"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_h2"
                            android:fontFamily="@font/linetocircular"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@id/sepe"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/rlShare"
                    android:layout_width="match_parent"
                    android:background="@drawable/curve_button_two"
                    android:layout_height="40dp">
                    <Button
                        android:visibility="visible"
                        android:fontFamily="@font/linetocircular"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:id="@+id/cancel"
                        android:textAllCaps="false"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_h5"
                        />
                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:visibility="gone"
                        android:theme="@style/progress_button_style"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <View
                    android:id="@+id/sepe"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"/>
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/sepe"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rlBackToHome"
                    android:layout_width="match_parent"
                    android:background="@drawable/curve_button"
                    android:layout_height="40dp">
                    <Button
                        android:visibility="visible"
                        android:fontFamily="@font/linetocircular"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:id="@+id/bookNow"
                        android:textAllCaps="false"
                        android:text="Book Now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_h5"
                        />
                    <ProgressBar
                        android:id="@+id/bookProgress"
                        android:visibility="gone"
                        android:theme="@style/progress_button_style"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
