<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.auth.create.cookie.NameViewModel" />
    </data>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.auth.create.cookie.NameFragment">
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/ll_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:text="You are all set!"
            android:textSize="@dimen/text_size_h1_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Tell us more about you"
            android:fontFamily="@font/linetocircular"
            android:textColor="@color/grey_font"
            android:textSize="@dimen/text_size_h5"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
            <RelativeLayout
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:padding="2dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailTextInputLayout"
                    android:layout_width="150dp"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@={viewModel.firstName}"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:fontFamily="sans-serif"
                        android:background="@color/white"
                        android:hint="First name" />

                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:padding="2dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="150dp"
                    app:hintEnabled="false"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@={viewModel.lastName}"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:fontFamily="sans-serif"
                        android:background="@color/white"
                        android:hint="Last name" />

                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="70dp"
            android:text="Now all set!"
            android:id="@+id/txt"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ll_log"
            android:fontFamily="@font/linetocircular"
            android:textColor="@color/grey_font"
            android:textSize="@dimen/text_size_h6"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <RelativeLayout
            android:layout_below="@id/txt"
            android:background="@drawable/curve_button"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/finish"
                android:clickable="true"
                android:background="@color/transparent"
                android:foreground="@drawable/ripple_semi"
                android:focusable="true"
                android:text="Finish"
                android:textColor="@color/white"/>
            <ProgressBar
                style="@style/progress_button_style"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/finishProgress"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>
