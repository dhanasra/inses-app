<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Provide Your Feedback"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_h3"
            android:fontFamily="@font/linetocircular"/>
        <TextView
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="We are excited to hear from you about your experiences with our products &amp; services"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_h7"
            android:fontFamily="@font/linetocircular"/>
        <View
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_white"/>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:id="@+id/ed"
            android:layout_height="wrap_content"
            android:hint="share your experiences with us"
            android:paddingBottom="50dp"
            android:textSize="@dimen/text_size_h6"
            android:textColor="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_toStartOf="@id/submitButton"
                android:id="@+id/cancelButton"
                android:text="CANCEL"
                android:maxLines="2"
                android:textColor="@color/color_secondary"
                android:textSize="@dimen/text_size_h5"
                android:fontFamily="@font/linetocircular"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/submitButton"
                android:text="SUBMIT"
                android:maxLines="2"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/text_size_h5"
                android:fontFamily="@font/linetocircular"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>