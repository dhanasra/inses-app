<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.bookings.fragments.payment.PaymentSelectViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.bookings.fragments.payment.PaymentSelectActivity">
        <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/paymentSelectEpoxyRecyclerView"/>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="match_parent"
                    android:background="@drawable/curve_button"
                    android:layout_height="40dp">
                    <Button
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/rouded_square_ripple"
                        android:visibility="visible"
                        android:fontFamily="@font/linetocircular"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:id="@+id/paymentSelectButton"
                        android:textAllCaps="false"
                        android:text="Pay"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_h5"
                        />
                    <ProgressBar
                        android:id="@+id/payProgress"
                        android:visibility="gone"
                        android:theme="@style/progress_button_style"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
