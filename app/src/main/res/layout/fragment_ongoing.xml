<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.bookings.fragments.OnGoingViewModel" />
    </data>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.bookings.fragments.OngoingFragment">
        <com.airbnb.epoxy.EpoxyRecyclerView
            android:paddingBottom="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ongoingEpoxyRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/empty"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/ic_empty_book"/>
                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/title1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h5"
                    android:text="No Booking Found"
                    android:fontFamily="@font/linetocircular"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:id="@+id/title2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_h6"
                    android:text="Looks like you dont have any Booking here but you can make booking by order your service now"
                    android:fontFamily="@font/linetocircular"
                    android:textColor="@color/grey"/>
                <RelativeLayout
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_width="120dp"
                    android:background="@drawable/curve_button_two"
                    android:layout_height="40dp">
                    <Button
                        android:visibility="visible"
                        android:fontFamily="@font/linetocircular"
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:background="@color/transparent"
                        android:id="@+id/book"
                        android:textAllCaps="false"
                        android:text="Book Now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_h5"
                        />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:visibility="gone"
                        android:theme="@style/progress_button_style"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
