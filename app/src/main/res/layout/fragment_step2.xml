<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.dashboard.makeService.steps.Step2ViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.makeService.steps.Step2Fragment">
        <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressEpoxyRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <ScrollView
            android:paddingBottom="20dp"
            android:scrollbars="none"
            android:layout_above="@id/bottom"
            android:layout_below="@id/addressEpoxyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/text_size_h5"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Area"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/spinner"
                        android:textSize="@dimen/text_size_h6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:prompt="@string/spinner_title" />
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/text_size_h5"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:text="Location / Society"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/messageTextInputLayout"
                        android:layout_width="match_parent"
                        app:hintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/passwordTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="@dimen/text_size_h5"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:text="@={viewModel.locality}"
                            android:fontFamily="sans-serif"
                            android:background="@color/white"
                            android:hint="Enter location / society name" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/text_size_h5"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="House / Flat no"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/houseTextInputLayout"
                        android:layout_width="match_parent"
                        app:hintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/houseTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="@dimen/text_size_h5"
                            android:textColor="@color/black"
                            android:text="@={viewModel.no}"
                            android:inputType="text"
                            android:fontFamily="sans-serif"
                            android:background="@color/white"
                            android:hint="Enter your flat / house no" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/text_size_h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Street Address"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/streetTextInputLayout"
                        android:layout_width="match_parent"
                        app:hintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/streetTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="@dimen/text_size_h5"
                            android:text="@={viewModel.street}"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:fontFamily="sans-serif"
                            android:background="@color/white"
                            android:hint="Enter your street address" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Near by"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nearByTextInputLayout"
                        android:layout_width="match_parent"
                        app:hintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/nearByTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="@dimen/text_size_h5"
                            android:text="@={viewModel.nearBy}"
                            android:textColor="@color/black"
                            android:inputType="text"
                            android:fontFamily="sans-serif"
                            android:background="@color/white"
                            android:hint="Enter your near by marks" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/text_size_h5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Phone number"/>
                <LinearLayout
                    android:padding="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/phoneNumberTextInputLayout"
                        android:layout_width="match_parent"
                        app:hintEnabled="false"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/phoneNumberTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="@dimen/text_size_h5"
                            android:text="@={viewModel.phoneNumber}"
                            android:textColor="@color/black"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:fontFamily="sans-serif"
                            android:background="@color/white"
                            android:hint="Enter your Phone number" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:background="@drawable/curve_button"
                android:layout_height="40dp">
                <Button
                    android:visibility="visible"
                    android:fontFamily="@font/linetocircular"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:id="@+id/next"
                    android:textAllCaps="false"
                    android:text="continue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_h3"
                    />
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:visibility="gone"
                    android:theme="@style/progress_button_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
