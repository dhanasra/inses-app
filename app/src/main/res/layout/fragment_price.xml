<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.inses.ui.dashboard.makeService.steps.PriceViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dashboard.makeService.steps.PriceFragment">
        <com.airbnb.epoxy.EpoxyRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/priceEpoxyRecyclerView"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <ScrollView
            android:layout_below="@id/priceEpoxyRecyclerView"
            android:layout_above="@id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="70dp"
                    android:layout_margin="20dp"
                    android:id="@+id/serviceImage"
                    android:layout_height="70dp"/>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount Per Service"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_h5"
                        android:fontFamily="@font/linetocircular"/>
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/amountPerService"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_h5"
                        android:fontFamily="@font/linetocircular"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number of Services"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_h5"
                        android:fontFamily="@font/linetocircular"/>
                    <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/rouded_square_ripple"
                        android:layout_toStartOf="@id/no"
                        android:padding="10dp"
                        android:id="@+id/minus"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/curve_button_two"/>
                    <TextView
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/add"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/no"
                        android:maxLines="2"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_h3"
                        android:fontFamily="@font/linetocircular"/>
                    <ImageView
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/rouded_square_ripple"
                        android:layout_marginStart="20dp"
                        android:id="@+id/add"
                        android:layout_alignParentEnd="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/curve_button_two"/>
                </RelativeLayout>
                <View
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"/>
                <RelativeLayout
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_h3"
                        android:fontFamily="@font/linetocircular"/>
                    <TextView
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/totalAmount"
                        android:maxLines="2"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_h3"
                        android:fontFamily="@font/linetocircular"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="vertical"
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:background="@drawable/curve_button"
                android:layout_height="40dp">
                <Button
                    android:visibility="visible"
                    android:fontFamily="@font/linetocircular"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:background="@color/transparent"
                    android:id="@+id/authNext"
                    android:textAllCaps="false"
                    android:text="Next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_h3"
                    />
                <ProgressBar
                    android:id="@+id/payProgressBar"
                    android:visibility="gone"
                    android:theme="@style/progress_button_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
